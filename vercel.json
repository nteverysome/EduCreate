{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "prisma generate && SKIP_ENV_VALIDATION=true next build --no-lint",
  "build": {
    "env": {
      "NODE_ENV": "production",
      "SKIP_ENV_VALIDATION": "true"
    }
  },
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 30
    },
    "pages/api/**/*.ts": {
      "maxDuration": 30
    },
    "pages/api/ai/**/*.ts": {
      "maxDuration": 60
    },
    "pages/api/monitoring/**/*.ts": {
      "maxDuration": 10
    }
  }
}