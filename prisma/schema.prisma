}

enum BillingInterval {
  MONTHLY
  YEARLY
}

enum H5PContentStatus {
  DRAFT
  PUBLISHED
}

enum GameCategory {
  QUIZ
  MATCHING
  MEMORY
  ACTION
  CREATIVE
  WORD_GAMES
  MATH_GAMES
}

enum DifficultyLevel {
  EASY
  MEDIUM
  HARD
