{
  "name": "airplane-collision-game",
  "version": "1.0.0",
  "description": "Phaser 3 飛機碰撞英語學習遊戲 - Vite 子專案",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "node scripts/deploy.js",
    "deploy:verbose": "node scripts/deploy.js --verbose",
    "deploy:quiet": "node scripts/deploy.js --quiet",
    "deploy:prod": "NODE_ENV=production node scripts/deploy.js",
    "copy-to-public": "powershell -Command \"Remove-Item -Recurse -Force ../../public/games/airplane-game -ErrorAction SilentlyContinue; Copy-Item -Recurse dist ../../public/games/airplane-game\"",
    "type-check": "tsc --noEmit",
    "analyze": "npm run build && node scripts/analyze-bundle.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "lucide-react": "^0.525.0",
    "phaser": "^3.90.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "keywords": [
    "phaser3",
    "typescript",
    "vite",
    "english-learning",
    "memory-science",
    "gept"
  ],
  "author": "EduCreate Team",
  "license": "MIT"
}
