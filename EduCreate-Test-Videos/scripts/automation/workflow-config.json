{
  "version": "1.0.0",
  "description": "EduCreate 自動化開發助手系統配置文件",
  "lastUpdated": "2025-08-08T17:30:00.000Z",
  
  "coreWorkflowPrinciples": {
    "enabled": true,
    "description": "基於 MY-WORKFLOW.md 的核心工作原則",
    "forceAnalysis": true,
    "requireMemoryCheck": true,
    "preventDirectFix": true,
    "workflow": "看到問題 → 深度分析根本原因 → 基於經驗思考 → 設計正確方案 → 實施修復"
  },

  "mcpTools": {
    "description": "8個 MCP 工具的自動化協調配置",
    "sequentialThinking": {
      "enabled": true,
      "priority": 1,
      "description": "邏輯推理過程記錄",
      "autoTrigger": ["problem-analysis", "solution-design"]
    },
    "localMemory": {
      "enabled": true,
      "priority": 2,
      "description": "測試記憶管理",
      "autoTrigger": ["learning-record", "experience-check"]
    },
    "sqlite": {
      "enabled": true,
      "priority": 3,
      "description": "數據庫操作",
      "autoTrigger": ["data-analysis", "performance-tracking"]
    },
    "vectorSearch": {
      "enabled": true,
      "priority": 4,
      "description": "智能搜索",
      "autoTrigger": ["code-search", "documentation-search"]
    },
    "playwright": {
      "enabled": true,
      "priority": 5,
      "description": "測試自動化",
      "autoTrigger": ["testing", "verification", "screenshot"]
    },
    "feedbackCollector": {
      "enabled": true,
      "priority": 6,
      "description": "反饋收集",
      "autoTrigger": ["task-completion", "phase-completion"],
      "mandatory": true
    },
    "autoGen": {
      "enabled": true,
      "priority": 7,
      "description": "多代理協作",
      "autoTrigger": ["complex-analysis", "multi-perspective"]
    },
    "langfuse": {
      "enabled": true,
      "priority": 8,
      "description": "測試追蹤和分析",
      "autoTrigger": ["test-execution", "performance-analysis"]
    },
    "mongodb": {
      "enabled": true,
      "priority": 9,
      "description": "數據驅動智能開發",
      "autoTrigger": ["data-analysis", "learning-optimization"]
    }
  },

  "phaser3Detection": {
    "enabled": true,
    "description": "Phaser 3 自動檢測和提醒系統",
    "keywords": [
      "phaser", "Phaser", "phaser3", "Phaser 3",
      "遊戲", "game", "Game", "gaming",
      "AirplaneCollisionGame", "GameScene", "sprite",
      "Phaser.Scene", "Phaser.Game", "phaser.js"
    ],
    "pathPatterns": [
      "/games/", "Game.tsx", ".phaser.", 
      "phaser-config", "game-scene", "sprite-"
    ],
    "autoReminder": true,
    "reminderScript": "EduCreate-Test-Videos/scripts/phaser3-learning-persistence.js",
    "verificationScript": "EduCreate-Test-Videos/scripts/phaser3-verified-workflow.js"
  },

  "responsiveTesting": {
    "enabled": true,
    "mandatory": true,
    "description": "響應式測試工作流程自動化",
    "command": "npm run test:responsive",
    "devices": [
      {
        "name": "手機直向",
        "width": 375,
        "height": 667,
        "description": "iPhone SE 直向模式"
      },
      {
        "name": "手機橫向",
        "width": 812,
        "height": 375,
        "description": "iPhone SE 橫向模式"
      },
      {
        "name": "平板直向",
        "width": 768,
        "height": 1024,
        "description": "iPad 直向模式"
      },
      {
        "name": "平板橫向",
        "width": 1024,
        "height": 768,
        "description": "iPad 橫向模式"
      },
      {
        "name": "桌面版",
        "width": 1440,
        "height": 900,
        "description": "標準桌面解析度"
      }
    ],
    "reportPath": "reports/visual-comparisons/",
    "screenshotPath": "reports/visual-comparisons/screenshots/",
    "successRate": 100,
    "autoFix": true
  },

  "errorDetection": {
    "enabled": true,
    "description": "錯誤自動檢測和修復系統",
    "keywords": [
      "Error", "Failed", "timeout", "did not find",
      "ECONNREFUSED", "404", "500", "ENOENT",
      "SyntaxError", "TypeError", "ReferenceError",
      "UnhandledPromiseRejectionWarning"
    ],
    "autoFix": true,
    "tools": ["diagnostics", "codebase-retrieval", "view"],
    "fixStrategies": {
      "syntax": ["diagnostics", "view", "str-replace-editor"],
      "network": ["browser_navigate_Playwright", "browser_wait_for_Playwright"],
      "file": ["view", "save-file", "str-replace-editor"],
      "dependency": ["launch-process", "package-manager"]
    }
  },

  "testVideoManagement": {
    "enabled": true,
    "description": "測試影片管理自動化",
    "autoProcess": true,
    "autoReport": true,
    "namingFormat": "YYYYMMDD_模組_功能_結果_版本_序號.webm",
    "paths": {
      "current": "EduCreate-Test-Videos/current",
      "success": "EduCreate-Test-Videos/current/success",
      "failure": "EduCreate-Test-Videos/current/failure",
      "compressed": "EduCreate-Test-Videos/compressed",
      "reports": "EduCreate-Test-Videos/reports"
    },
    "scripts": {
      "process": "EduCreate-Test-Videos/scripts/automation/process-test-videos.js",
      "report": "EduCreate-Test-Videos/scripts/automation/generate-reports.js"
    },
    "compression": {
      "enabled": true,
      "quality": "medium",
      "maxSize": "50MB"
    }
  },

  "workflowPhases": {
    "phase1": {
      "name": "功能開發",
      "description": "基於核心工作原則的功能開發階段",
      "steps": [
        "executeCoreWorkflowPrinciples",
        "view_tasklist",
        "update_tasks",
        "phaser3Detection",
        "codebase-retrieval",
        "createComponents",
        "integrateSystem"
      ],
      "mandatory": ["executeCoreWorkflowPrinciples", "phaser3Detection"]
    },
    "phase2": {
      "name": "測試驗證",
      "description": "含響應式視覺驗證的測試階段",
      "steps": [
        "initializeTestSystem",
        "beforeScreenshot",
        "codeModification",
        "afterScreenshot",
        "screenshotComparison",
        "responsiveTesting",
        "playwrightTesting",
        "errorDetection",
        "functionalVerification"
      ],
      "mandatory": ["responsiveTesting", "errorDetection", "testVideoManagement"]
    },
    "phase3": {
      "name": "記錄反饋",
      "description": "含響應式測試報告的記錄反饋階段",
      "steps": [
        "viewTestResults",
        "checkMCPIntegration",
        "viewResponsiveReport",
        "generateCompleteReport",
        "collectFeedback",
        "completeTask"
      ],
      "mandatory": ["collectFeedback", "generateCompleteReport"]
    }
  },

  "screenshotManagement": {
    "enabled": true,
    "description": "截圖比對和路徑管理",
    "autoProvideFullPath": true,
    "namingFormat": "YYYYMMDD_模組_功能_結果_版本_序號.png",
    "basePath": "C:\\Users\\Administrator\\Desktop\\EduCreate\\EduCreate-Test-Videos\\current",
    "categories": {
      "before": "before-fix",
      "after": "after-fix",
      "comparison": "comparison",
      "responsive": "responsive"
    }
  },

  "integrationChecklist": {
    "description": "工具整合檢查清單",
    "items": [
      "Sequential Thinking 記錄已生成",
      "Langfuse 追蹤已記錄",
      "本地記憶已更新",
      "測試影片已正確存檔",
      "報告已生成",
      "反饋已收集",
      "響應式測試已完成",
      "5種設備截圖已生成",
      "響應式視覺對比報告已生成"
    ]
  },

  "performanceTargets": {
    "description": "性能目標和成功標準",
    "automationCoverage": 90,
    "responsiveTestSuccess": 100,
    "videoManagementSuccess": 100,
    "errorDetectionRate": 100,
    "mcpToolIntegration": 100,
    "workflowCompliance": 100
  },

  "logging": {
    "enabled": true,
    "level": "info",
    "file": "EduCreate-Test-Videos/logs/workflow-automation.log",
    "console": true,
    "timestamp": true,
    "colors": true
  }
}
